#include <Keypad.h>
byte a[4] = {2, 3, 4, 5};
byte b[4] = {6, 7, 8, 9};
char keys[4][4] = {
  '1', '2', '3', 'A',
  '4', '5', '6', 'B',
  '7', '8', '9', 'C',
  '*', '0', '#', 'D'
};
Keypad thekeypad = Keypad( makeKeymap(keys), a, b, 4, 4);
void setup() {
  Serial.begin(9600);
}

void loop() {
  char key = thekeypad.getKey();
  if (key != NO_KEY) {
    Serial.write(key);
    delay(20);
  }
}
